<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/stylesheets/home.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
        <div id="total">
            <h1></h1>
        <div id="sidebar">
            
            <div class ='conteudo'>
                <img src="/images/livro.png" id="livroHome" alt="Foto do livro" onclick="location.href = '/' ">
                <img src="/images/mais.svg" alt="Mais" class="btnSide">
                <img src="/images/sino.svg" alt="sino" class="btnSide">
                <img src="/images/config.svg" alt="configurações" class="btnSide">
            </div>

        </div>

    </div>
    <div id="linhaDest"></div>
    
    <div class="kanban">
        
        <div class="coluna" id="baixa">
                
            <div class="cabecaCol">
                    <h2>Baixa</h2>
            </div>

            <div class="corpoCol">
                
                <%for(baix of baixa){%>
                    <div class="task-card baixa-priority">
                        
                        <div class="task-content">
                            <h3><%=baix.nome_task%></h3>

                            <div class="task-actions">
                                <i class="fas fa-ellipsis-v"></i>
                            </div>

                        </div>

                    </div>
                <%}%>
                    
            </div>

        </div>
        
        
        <div class="coluna" id="media">
            <div class="cabecaCol">
                <h2>Média</h2>
            </div>

            <div class="corpoCol">

               <%for(medi of media){%>

                    <div class="task-card media-priority">

                        <div class="task-content">
                            <h3><%=medi.nome_task%></h3>
                            <div class="task-actions">

                                <i class="fas fa-ellipsis-v"></i>
                            </div>

                        </div>

                    </div>

                <%}%>

            </div>

        </div>
        
        <div class="coluna" id="alta">
            <div class="cabecaCol">
                <h2>Alta</h2>
            </div>

            <div class="corpoCol">
                <%for(alt of alta){%>
                    <div class="task-card alta-priority">

                        <div class="task-content">
                            <h3><%=alt.nome_task%></h3>
                            <div class="task-actions">

            
                                <i class="fas fa-ellipsis-v"></i>

                            </div>

                        </div>

                    </div>
                <%}%>
            </div>

        </div>
  </div>

<div id="popupCriar">
    <section>
        <form action="/api/tasks" method="post">

            <p><label for="nome_task">Nome:</label>
            <input type="text" name="nome_task"></input></p>
            
           

            <label for="descricao">Descrição:</label>
            <textarea name="descricao" id="descrição"></textarea>

            <label for="prioridade_id">Prioridade</label>
            <p><select name="prioridade_id" id=""></p>
                <option value=1>Baixa</option>
                <option value=2>Média</option>
                <option value=3>Alta</option>
            </select>
            <button type="submit">Criar</button>


        </form>
    </section>
</div>

</body>
</html>