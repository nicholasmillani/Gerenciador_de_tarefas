<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/stylesheets/home.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        /* Estilos compartilhados para popups */
        .popup {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(5px);
            z-index: 1000;
            justify-content: center;
            align-items: center;
        }

        .popup.active {
            display: flex;
        }

        /* Estilos compartilhados para seções de popup */
        .popup section {
            background: white;
            padding: 2rem;
            border-radius: 15px;
            width: 90%;
            max-width: 500px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            position: relative;
        }

        /* Estilos para formulários e conteúdo */
        .popup form, .popup .content {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        /* Estilos para títulos */
        .popup h1 {
            color: #174675;
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid rgba(23, 70, 117, 0.1);
        }

        /* Estilos para descrição */
        .popup .description {
            background: rgba(23, 70, 117, 0.05);
            padding: 1rem;
            border-radius: 8px;
            color: #2d3748;
            line-height: 1.6;
            min-height: 100px;
            margin: 1rem 0;
        }

        /* Estilos para o prazo */
        .popup .deadline {
            color: #174675;
            font-weight: 500;
            text-align: right;
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 2px solid rgba(23, 70, 117, 0.1);
        }

        /* Estilos compartilhados para inputs e botões */
        input, textarea, select {
            padding: 0.8rem;
            border: 2px solid rgba(23, 70, 117, 0.1);
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        input:focus, textarea:focus, select:focus {
            outline: none;
            border-color: #174675;
            box-shadow: 0 0 0 3px rgba(23, 70, 117, 0.1);
        }

        textarea {
            min-height: 100px;
            resize: vertical;
        }

        label {
            color: #174675;
            font-weight: 500;
            margin-bottom: 0.5rem;
        }

        .butPop {
            background: linear-gradient(45deg, #174675, #1f5e9c);
            color: white;
            border: none;
            padding: 1rem 2rem;
            border-radius: 8px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            align-self: flex-end;
        }

        .butPop:hover {
            background: linear-gradient(45deg, #1f5e9c, #2670b8);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(23, 70, 117, 0.2);
        }

        /* Botão de fechar */
        .closePopup {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: none;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
            color: #174675;
            padding: 0.5rem;
            transition: transform 0.3s ease;
        }

        .closePopup:hover {
            transform: rotate(90deg);
        }

        /* Responsividade */
        @media (max-width: 768px) {
            .popup section {
                width: 95%;
                margin: 1rem;
                padding: 1.5rem;
            }

            .popup h1 {
                font-size: 1.3rem;
            }
        }
    </style>
</head>
<body>
    <div id="total">
        <h1></h1>
        <div id="sidebar">
            <div class="conteudo">
                <img src="/images/livro.png" id="livroHome" alt="Foto do livro" onclick="location.href = '/'">
                <img src="/images/mais.svg" alt="Mais" class="btnSide" id="openPopup">
                <img src="/images/sino.svg" alt="sino" class="btnSide">
                <img src="/images/config.svg" alt="configurações" class="btnSide">
            </div>
        </div>
    </div>
    <div id="linhaDest"></div>
    
    <div class="kanban">
        
        <div class="coluna" id="baixa">
                
            <div class="cabecaCol">
                    <h2>Baixa</h2>
            </div>

            <div class="corpoCol">
                
                <%for(baix of baixa){%>
                    <div class="task-card baixa-priority">
                        
                        <div class="task-content">
                            <h3><%=baix.nome_task%></h3>

                            <div class="task-actions">
                                <i class="fas fa-ellipsis-v"></i>
                            </div>

                        </div>

                    </div>
                <%}%>
                    
            </div>

        </div>
        
        
        <div class="coluna" id="media">
            <div class="cabecaCol">
                <h2>Média</h2>
            </div>

            <div class="corpoCol">

               <%for(medi of media){%>

                    <div class="task-card media-priority">

                        <div class="task-content">
                            <h3><%=medi.nome_task%></h3>
                            <div class="task-actions">

                                <i class="fas fa-ellipsis-v"></i>
                            </div>

                        </div>

                    </div>

                <%}%>

            </div>

        </div>
        
        <div class="coluna" id="alta">
            <div class="cabecaCol">
                <h2>Alta</h2>
            </div>

            <div class="corpoCol">
                <%for(alt of alta){%>
                    <div class="task-card alta-priority">

                        <div class="task-content">
                            <h3><%=alt.nome_task%></h3>
                            <div class="task-actions">

            
                                <i class="fas fa-ellipsis-v"></i>

                            </div>

                        </div>

                    </div>
                <%}%>
            </div>

        </div>
  </div>

<!--Popup de criar task-->
<div id="popupCriar" class="popup">
    <section>
        <button class="closePopup" id="closePopupCriar">×</button>
        <form action="/api/tasks" method="post">
            <div>
                <label for="nome_task">Nome da Tarefa</label>
                <input type="text" name="nome_task" required>
            </div>

            <div>
                <label for="descricao">Descrição</label>
                <textarea name="descricao" id="descricao" required></textarea>
            </div>

            <div>
                <label for="prioridade_id">Prioridade</label>
                <select name="prioridade_id" required>
                    <option value="1">Baixa</option>
                    <option value="2">Média</option>
                    <option value="3">Alta</option>
                </select>
            </div>

            <button type="submit" class="butPop">Criar Tarefa</button>
        </form>
    </section>
</div>

<!--Popup de especificações da task-->
<div id="popupEspec" class="popup">
    <section>
        <button class="closePopup" id="closePopupEspec">×</button>
        <div class="content">
            <h1>Nome da task</h1>
            <div class="description">
                <p>Descrição da task</p>
            </div>
            <div class="deadline">Prazo: xx/xx/xxxx</div>
            <button class="butPop">Finalizar</button>
        </div>
    </section>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="scripts/homeScript.js"></script>
</body>
</html>